#include <stdio.h>
#include <math.h>

float checkx(float x){
   
    while ((scanf("%f", &x) != 1) || (x >= 0.5) || (x <-0.5)){
        scanf("%*c"); /* "*" указывает, что поле должно быть прочитано, но проигнорировано */
        printf("некорректно введено значение x\n");
    }
    return x;
}

float checke(float e){
   
    while ((scanf("%f", &e) != 1) || (e <= 0)){
        scanf("%*c"); /* "*" указывает, что поле должно быть прочитано, но проигнорировано */
        printf("некорректно введено значение e\n");
    }
    return e;
}

float ab(float chislo){ 
    
    if (chislo < 0){
        chislo = chislo*(-1);
    }
 
    return chislo;
} 

float f2(float x, float e){
    float p = x,sum = p;
    int i;
    for (i =1; ab(p) > e; i++){
        p = (p*x)*(2*i-1)/i;
        sum+=p;
        
    }
    return sum;
}
 
int main(){
    float chislo=0, accuracy=0, f2r;

    printf("Введите степень  x:\n");
    chislo= checkx(chislo);
    printf("Введите количество членов в ряде:\n");
    accuracy = checke(accuracy);
    f2r = f2(chislo, accuracy);
    printf("%f\n",f2r);
    printf("%f", (chislo)/(sqrt(1-2*chislo)));
    
    return 0;
}
