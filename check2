#include <stdio.h>
#include <math.h>

float checkx(float x){
   
    while ((scanf("%f", &x) != 1) || (x >= 0.5) || (x <-0.5)){
        scanf("%*c"); /* "*" указывает, что поле должно быть прочитано, но проигнорировано */
        printf("некорректно введено значение x\n");
    }
    return x;
}

float checke(float e){
   
    while ((scanf("%f", &e) != 1) || (e <= 0)){
        scanf("%*c"); /* "*" указывает, что поле должно быть прочитано, но проигнорировано */
        printf("некорректно введено значение e\n");
    }
    return e;
}

float ab(float chislo){ 
    
    if (chislo < 0){
        chislo = chislo*(-1);
    }
 
    return chislo;
} 

float f2(float x, float e){
    float p = x,p1,sum = p;
    int i;
    for (i =1; ab(p) > e; i++){
        p = (p*x)*(2*i-1)/i;
        sum+=p;
        
    }
    return sum;
}
 
int main(){
    float x, e, f2r;
    int n;

    printf("Введите степень  x:\n");
    x = checkx(x);
    printf("Укажите точность e:\n");
    e = checke(e);
    f2r = f2(x, e);
    printf("%f\n",f2r);
    printf("%f", (x)/(sqrt(1-2*x)));
    return 0;
}
