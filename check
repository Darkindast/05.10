#include <stdio.h>
#include <math.h>
float checkx(float x){
   
    while ((scanf("%f", &x) != 1) || (x >= 0.5) || (x <-0.5)){
        scanf("%*c");
        printf("некорректно введено значение x\n");
    }
    return x;
}

int checkn(int n){
   
    while ((scanf("%d", &n)!= 1) || (n <= 0)){
        scanf("%*c");
        printf("некорректно введено значение n\n");
    }
    return n;
}


float f2(float x, int n){
    float p = x,p1, y=x*x, sum = p;
    
    for(int i = 1; i <n; i++){
        p = (p*x)*(i*2-1)/i;
 
        sum+=p;
        
    }
    return sum;
}
 
int main(){
    float x, f2r;
    int n;

    printf("Введите степень  x:\n");
    x = checkx(x);
    printf("Введите количество членов в ряде  n:\n");
    n = checkn(n);
    f2r = f2(x, n);
    printf("%f\n",f2r);
    printf("%f", (x)/(sqrt(1-2*x)));
    
    return 0;
}
